{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "dependencyDashboard": false,
  "automerge": true,
  "timezone": "Asia/Tokyo",
  "assigneesSampleSize": 2,
  "reviewersSampleSize": 1,
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "labels": [
    "dependenciese"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "eslint"
      ],
      "labels": [
        "linting"
      ]
    },
    {
      "matchPackagePatterns": [
        "vue"
      ],
      "labels": [
        "vue.js"
      ]
    },
    {
      "matchPackagePatterns": [
        "buefy"
      ],
      "labels": [
        "ui-library"
      ]
    }
  ]
}
